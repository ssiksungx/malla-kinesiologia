<body>

<h2>Malla Interactiva - Kinesiología UDP</h2>
<div id="malla"></div>

<script>
  const ramos = {
    "Semestre 1": [
      { nombre: "Anatomía I" },
      { nombre: "Biología Celular" },
      { nombre: "Introducción a la Kinesiología" }
    ],
    "Semestre 2": [
      { nombre: "Anatomía II", prerequisitos: ["Anatomía I"] },
      { nombre: "Fisiología I", prerequisitos: ["Biología Celular"] },
      { nombre: "Neurociencia I" }
    ],
    "Semestre 3": [
      { nombre: "Biomecánica I", prerequisitos: ["Fisiología I"] },
      { nombre: "Evaluación Kinésica I", prerequisitos: ["Introducción a la Kinesiología"] },
      { nombre: "Psicología del Desarrollo" }
    ]
    // Puedes seguir agregando tus semestres reales aquí
  };

  const aprobados = new Set();
  const malla = document.getElementById("malla");

  function crearMalla() {
    for (let semestre in ramos) {
      const columna = document.createElement("div");
      columna.className = "semestre";

      const titulo = document.createElement("h3");
      titulo.textContent = semestre;
      columna.appendChild(titulo);

      ramos[semestre].forEach(ramo => {
        const div = document.createElement("div");
        div.className = "ramo";
        div.textContent = ramo.nombre;

        if (ramo.prerequisitos) {
          div.classList.add("bloqueado");
        }

        div.addEventListener("click", () => {
          if (div.classList.contains("bloqueado")) return;

          div.classList.toggle("aprobado");
          const nombre = ramo.nombre;
          if (aprobados.has(nombre)) {
            aprobados.delete(nombre);
          } else {
            aprobados.add(nombre);
          }
          actualizarBloqueos();
        });

        ramo.element = div;
        columna.appendChild(div);
      });

      malla.appendChild(columna);
    }

    actualizarBloqueos();
  }

  function actualizarBloqueos() {
    for (let semestre in ramos) {
      ramos[semestre].forEach(ramo => {
        if (!ramo.prerequisitos) return;

        const desbloqueado = ramo.prerequisitos.every(pr => aprobados.has(pr));

        if (desbloqueado) {
          ramo.element.classList.remove("bloqueado");
        } else {
          ramo.element.classList.add("bloqueado");
        }
      });
    }
  }

  crearMalla();
</script>

</body>
</html>
