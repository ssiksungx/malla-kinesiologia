  <title>Malla Kinesiología UDP</title>

  <!-- Fuente Lora -->
  <link href="https://fonts.googleapis.com/css2?family=Lora&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Lora', serif;
      background-color: #fdf7ff;
      margin: 0;
      padding: 20px;
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
      color: #5a3f6b;
    }

    .semestre {
      display: inline-block;
      vertical-align: top;
      width: 220px;
      margin: 12px;
      padding: 12px;
      background: #ffffff;
      border: 1px solid #e0d0f0;
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(90, 63, 107, 0.05);
    }

    .semestre h3 {
      text-align: center;
      color: #7a5791;
    }

    .ramo {
      margin: 10px 0;
      padding: 10px;
      text-align: center;
      border-radius: 8px;
      background-color: #ffe0ec; /* rosado suave */
      color: #4a3b47;
      cursor: pointer;
      border: 1px solid #f7c3d8;
      transition: all 0.3s;
    }

    .ramo.aprobado {
      background-color: #d4b1e8; /* morado pastel */
      color: white;
      text-decoration: line-through;
    }

    .ramo.bloqueado {
      background-color: #e2e2e2; /* gris claro */
      color: #888;
      cursor: not-allowed;
    }
  </style>
